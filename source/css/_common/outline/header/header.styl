// Header Section
// --------------------------------------------------
#header {
  margin: 0 auto;
  position: relative;
  width: 100%;
  height: 50vh;
  text-shadow: 0rem .2rem .3rem alpha(#000, .5);
  color: var(--header-text-color);

  a:hover {
    color: currentColor;
  }
}

/* 首页下拉箭头 */
#angle {
    position: absolute;
    bottom: 0vh;
    left: 50%;
    cursor: pointer;
    z-index: 5;
    transform: translateX(-50%);
}
@media (max-width: 860px) {
    #angle {
        bottom: 0vh;
    }
}
#angle i {
    font-size: 35px;
    color: #fff;
    @extend .up-down;
}

