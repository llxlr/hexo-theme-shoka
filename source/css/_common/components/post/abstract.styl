.md .abstract {
  background: transparent;
  font-size: 15px;
  display: block;

  fieldset {
    padding: 5px 15px;
    margin: 0 0 10px 0;
    border: 1px dashed var(--color-grey);
    border-radius: 10px;
  }

  legend {
    font-weight: 600;
    color: var(--text-color);
    padding: 0 5px;
  }

  p {
    text-indent: 2em !important;
  }
}
